<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.frontendcommunityapp.ListadosQuejasController">
   <children>
      <Label text="Lista de Mascotas Registradas" layoutX="14.0" layoutY="14.0" />
      <ListView fx:id="listViewMascotas" layoutX="14.0" layoutY="40.0" prefHeight="200.0" prefWidth="300.0" onMouseClicked="#mostrarDetallesMascota"/>

      <Label text="Mascotas Perdidas" layoutX="350.0" layoutY="14.0" />
      <TextArea fx:id="textAreaMascotasPerdidas" layoutX="350.0" layoutY="40.0" prefHeight="200.0" prefWidth="300.0" editable="false" />

      <Label text="Detalles de la Mascota" layoutX="14.0" layoutY="260.0" />
      <TextArea fx:id="textAreaDetallesMascota" layoutX="14.0" layoutY="280.0" prefHeight="100.0" prefWidth="636.0" editable="false" />
      <Button fx:id="backButton" layoutX="14.0" layoutY="470.0" onAction="#handleBackButtonAction" text="Regresar" />
   </children>
</AnchorPane>
