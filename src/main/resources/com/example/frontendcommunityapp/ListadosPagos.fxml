<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.frontendcommunityapp.ListadosPagosController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Lista de Pagos" />
      <ListView fx:id="listViewMascotas" layoutX="14.0" layoutY="40.0" onMouseClicked="#mostrarDetallesMascota" prefHeight="200.0" prefWidth="300.0" />

      <Label layoutX="350.0" layoutY="14.0" text="Pagos Activos" />
      <TextArea fx:id="textAreaMascotasPerdidas" editable="false" layoutX="350.0" layoutY="40.0" prefHeight="200.0" prefWidth="300.0" />

      <Label layoutX="14.0" layoutY="260.0" text="Detalles del Pago" />
      <TextArea fx:id="textAreaDetallesMascota" editable="false" layoutX="14.0" layoutY="280.0" prefHeight="100.0" prefWidth="636.0" />
      <Button fx:id="backButton" layoutX="14.0" layoutY="470.0" onAction="#handleBackButtonAction" text="Regresar" />
   </children>
</AnchorPane>
