   <Label layoutX="350.0" layoutY="14.0" text="Anuncios Activos" />
   <TextArea fx:id="textAreaMascotasPerdidas" editable="true" layoutX="350.0" layoutY="40.0" prefHeight="200.0" prefWidth="300.0" />

   <Label layoutX="14.0" layoutY="260.0" text="Detalles Anuncio" />
   <TextArea fx:id="textAreaDetallesMascota" editable="true" layoutX="14.0" layoutY="280.0" prefHeight="100.0" prefWidth="636.0" />
   <Button fx:id="backButton" layoutX="14.0" layoutY="470.0" onAction="#handleBackButtonAction" text="Regresar" />
</children>
</AnchorPane>
